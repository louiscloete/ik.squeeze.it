<%- include('partials/header') %>

<body>
  <div class="myContainer">
    <div class="panel-container">
      <div class="panel">
        <h1>Login</h1>
        <form action="/login" method="POST">
          <div class="form-group">
            <label class="myLabel" for="email">Email</label>
            <input type="email" class="form-control" name="username" required/>
          </div>
          <div class="form-group">
            <label class="myLabel" for="password">Password</label>
            <input type="password" class="form-control" name="password" required/>
          </div>
          <% if (locals.messages) { %>
          <p id="error"><%= messages[0] %></p>
          <% } %>
          <a href="/" role="button" type="button" class="btn btn-secondary myBtn">Back</a>
          <button type="submit" class="btn btn-light myBtn">Login</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    //Set server side validation message to dissapear after 5 seconds
    setTimeout(() => {
      document.getElementById('error').setAttribute("hidden",true);
    }, 5000);
  </script>
  <%- include('partials/footer') %>

