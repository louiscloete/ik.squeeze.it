<%- include('partials/header') %>

<body>
  <div class="myContainer">
    <div class="panel-container">
      <div class="panel">
        <h1>Register</h1>
        <form action="/register" method="POST">
          <div class="form-group">
            <label class="myLabel" for="name">First Name</label>
            <input type="text" class="form-control" maxlength="50" name="firstname" required/>
          </div>
          <div class="form-group">
            <label class="myLabel" for="lastname">Last Name</label>
            <input type="text" class="form-control" maxlength="50" name="lastname" required/>
          </div>
          <div class="form-group">
            <label class="myLabel" for="email">Email</label>
            <input type="email" class="form-control" name="username" required/>
          </div>
          <div class="form-group">
            <label class="myLabel" for="password" >Password</label>
            <input type="password" class="form-control" name="password" required/>
          </div>
          <button type="submit" class="btn btn-light myBtn">Register</button>
        </form>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

